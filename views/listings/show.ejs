<% layout("./layouts/boilerplate") %>

<div class="row">
        <div class="col-8 offset-3 mt-3">   
            <h3><%= listing.title %> </h3>
        </div>  

        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image%>" class="card-img-top show-image " alt="listing-image">
          <div class="card-body">
            <p class="card-text"> 
                <%= listing.description %> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
          </div>
        </div>

        <div class="btns col-4 offset-3 mt-3">
            <form method="GET" action="/listings/<%=listing._id%>/edit">
              <button class="btn edit-btn ">Edit</button>
            </form>
    
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn delete-btn offset-3">Delete</button>
            </form>
        </div>

        <!-- Review Section   -->
        <div class="col-8 offset-3 mb-3">
          <hr>
          <h3> Leave a Review </h3>
          <form method="post" action="/listings/<%=listing._id%>/reviews">
            <div class="mt-3 mb-3"> 
              <label for="rating" class="form-label"> Rating </label>
              <input 
              name="review[rating]" 
              type="range" 
              min="1" 
              max="5" 
              class="form-range">
            </div>

            <div class="mt-3 mb-3" >
              <label for="comment" class="form-label" > Comment </label>
              <textarea 
              name="review[comment]" 
              id="comment" 
              class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark ">sumbit</button>
          </form>
        </div>
         
</div>